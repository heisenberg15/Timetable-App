<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/create_subject_fragment"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/subject_edit_text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/info_edit_text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/subject_edit_text_id" />


    <TextView
        android:id="@+id/start_time_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="12:00"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/info_edit_text_id" />

    <TextView
        android:id="@+id/end_time_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="12:45"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/start_time_id" />


    <TextView
        android:id="@+id/choose_color_id"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:text="Blue"
        app:layout_constraintTop_toBottomOf="@id/end_time_id"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/save_subject_fab_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="54dp"
        android:src="@drawable/ic_done_white_24px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>